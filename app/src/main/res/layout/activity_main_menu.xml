<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.utilisateur.othello.MainMenuActivity"
    android:background="#f91ee028"
    android:backgroundTint="@color/background"
    android:minWidth="@dimen/abc_button_inset_horizontal_material">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Main menu "
        android:id="@+id/textView"
        android:textSize="50sp"
        android:textColorLink="#f7f270"
        android:textIsSelectable="false"
        android:textColor="#f7f983"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/menuButton"
        android:id="@+id/buttonPlay"
        android:text="@string/textPlay"
        android:textSize="@dimen/text_button_normal"
        android:layout_above="@+id/buttonHighScores"
        android:onClick="onPlay" />

    <Button
        style="@style/menuButton"
        android:id="@+id/buttonHighScores"
        android:text="@string/textHighScores"
        android:textSize="@dimen/text_button_normal"
        android:onClick="onHighScores" />

    <Button
        style="@style/menuButton"
        android:id="@+id/buttonExit"
        android:text="@string/textExit"
        android:textSize="@dimen/text_button_normal"
        android:layout_below="@+id/buttonHighScores"
        android:onClick="onExit" />

    <ImageButton
        style="@style/imageButton"
        android:id="@+id/rulesButton"
        android:src="@drawable/ic_help_outline_black_48dp"
        android:layout_alignParentLeft="true"
        android:onClick="onRules" />

    <ImageButton
        style="@style/imageButton"
        android:id="@+id/settingsButton"
        android:src="@drawable/ic_settings_black_48dp"
        android:layout_alignParentRight="true"
        android:onClick="onSettings" />

</RelativeLayout>
